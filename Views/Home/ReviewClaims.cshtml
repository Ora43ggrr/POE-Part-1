@{
    ViewData["Title"] = "Review Claims"; // Sets the page title
}

<div class="container">
    <!-- Main container -->
    <h2 class="text-teal mb-4">Review Claims</h2> <!-- Page heading -->

    <div class="card">
        <!-- Review claims card -->
        <div class="card-header">
            <!-- Card header -->
            <h5 class="mb-0">Claims for Approval</h5> <!-- Section title -->
        </div>
        <div class="card-body">
            <!-- Card body -->
            <div class="table-responsive">

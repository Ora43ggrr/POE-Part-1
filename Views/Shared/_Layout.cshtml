<!DOCTYPE html>
 <!-- Declares the document type -->
<html lang="en">
 <!-- Root element with language attribute -->
<head>
    <!-- Document head section -->
    <meta charset="utf-8" /> <!-- Character encoding for the document -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" /> <!-- Responsive viewport settings -->
    <title>@ViewData["Title"] - Contract Monthly Claim System</title> <!-- Dynamic page title -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> <!-- Custom site CSS with cache busting -->
</head>
<body>
    <!-- Document body section -->
    <header>
        <!-- Header section -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-teal border-bottom box-shadow mb-3">
            <!-- Main navigation with custom styling -->
            <div class="container-fluid">
                <!-- Container for navigation content -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CMCS</a> <!-- Brand/logo link to home -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" <!-- Mobile menu toggle button -->
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span> <!-- Hamburger icon for mobile menu -->
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Collapsible navigation content -->
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Main navigation list -->
                        <li class="nav-item">
                            <!-- Navigation item for Home -->
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a> <!-- Home link -->
                        </li>
                        <li class="nav-item">
                            <!-- Navigation item for Dashboard -->
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a> <!-- Dashboard link -->
                        </li>
                        <li class="nav-item">
                            <!-- Navigation item for Claims -->
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Claims">My Claims</a> <!-- My Claims link -->
                        </li>
                        <li class="nav-item">
                            <!-- Navigation item for Documents -->
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Documents">Documents</a> <!-- Documents link -->
                        </li>
                        <li class="nav-item">
                            <!-- Navigation item for Review Claims -->
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="ReviewClaims">Review Claims</a> <!-- Review Claims link -->
                        </li>
                        <li class="nav-item">
                            <!-- Navigation item for Privacy -->
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> <!-- Privacy Policy link -->
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <!-- Main content container -->
        <main role="main" class="pb-3">
            <!-- Main content area with bottom padding -->
            @RenderBody() <!-- Renders the content of individual views -->
        </main>
    </div>

    <footer class="border-top footer text-muted bg-teal text-light">
        <!-- Footer with teal background -->
        <div class="container">
            <!-- Footer content container -->
            &copy; 2025 - Contract Monthly Claim System - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Privacy Policy</a> <!-- Copyright and privacy link -->
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script> <!-- jQuery library -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> <!-- Bootstrap JavaScript with Popper -->
    <script src="~/js/site.js" asp-append-version="true"></script> <!-- Custom site JavaScript with cache busting -->
    @await RenderSectionAsync("Scripts", required: false) <!-- Renders optional script sections from views -->
</body>
</html>